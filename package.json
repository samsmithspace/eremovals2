{
  "name": "eremovals-frontend",
  "version": "1.0.0",
  "description": "A modern React application for Eremovals - professional moving and removal services",
  "private": true,
  "homepage": "https://eremovals.com",
  "author": {
    "name": "Eremovals Team",
    "email": "eremovalsscot@gmail.com",
    "url": "https://eremovals.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eremovals/frontend.git"
  },
  "bugs": {
    "url": "https://github.com/eremovals/frontend/issues",
    "email": "eremovalsscot@gmail.com"
  },
  "keywords": [
    "react",
    "moving-service",
    "removal-service",
    "edinburgh",
    "typescript",
    "pwa"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.4.2",
    "@google/maps": "^1.1.3",
    "@react-google-maps/api": "^2.19.2",
    "@stripe/stripe-js": "^2.1.11",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "axios": "^1.6.0",
    "bootstrap": "^5.3.2",
    "dotenv": "^16.5.0",
    "i18next": "^23.6.0",
    "i18next-browser-languagedetector": "^7.2.0",
    "i18next-http-backend": "^2.4.2",
    "moment": "^2.29.4",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-datetime": "^3.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.11",
    "react-i18next": "^13.5.0",
    "react-icons": "^4.11.0",
    "react-router-dom": "^6.17.0",
    "react-scripts": "^5.0.1",
    "web-vitals": "^3.5.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@babel/preset-env": "^7.23.3",
    "@babel/preset-react": "^7.22.15",
    "@types/google.maps": "^3.54.6",
    "@types/jest": "^29.5.8",
    "@types/node": "^18.19.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "cross-env": "^7.0.3",
    "cypress": "^13.5.1",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-cypress": "^2.15.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.1.0",
    "msw": "^1.3.2",
    "prettier": "^3.1.0",
    "serve": "^14.2.1",
    "source-map-explorer": "^2.5.3",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "test:ci": "cross-env CI=true react-scripts test --coverage --watchAll=false",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "analyze": "npm run build && npx source-map-explorer 'build/static/js/*.js'",
    "serve": "serve -s build -l 3000",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "e2e": "start-server-and-test serve http://localhost:3000 cypress:run",
    "pre-commit": "lint-staged",
    "prepare": "echo 'Skipping husky install'",
    "clean": "rm -rf build node_modules package-lock.json",
    "reinstall": "npm run clean && npm install",
    "dev": "npm start",
    "prod": "npm run build && npm run serve",
    "health-check": "curl -f http://localhost:3000/health || exit 1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "prettier"
    ],
    "plugins": [
      "react-hooks",
      "jsx-a11y",
      "cypress"
    ],
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "jsx-a11y/anchor-is-valid": "warn",
      "no-unused-vars": "warn",
      "no-console": "warn",
      "prefer-const": "error",
      "no-var": "error"
    },
    "overrides": [
      {
        "files": [
          "**/*.test.js",
          "**/*.test.jsx",
          "**/*.spec.js",
          "**/*.spec.jsx"
        ],
        "env": {
          "jest": true
        }
      },
      {
        "files": [
          "cypress/**/*.js"
        ],
        "env": {
          "cypress/globals": true
        }
      }
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "avoid"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/index.js",
      "!src/reportWebVitals.js",
      "!src/**/*.d.ts",
      "!src/setupTests.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.js"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "proxy": "http://localhost:5000"
}
